	<!-- FOUNDATION -->
	<section class="parallax parallax-1" style="background-image: url(<%= image_path "elavator-cityview-crop.jpg"%>)">
		<div class="overlay dark-5"></div>
			<div class="container">
				<div class="text-center">
					<h2 class="fs-40 fw-300">Request an Intervention</h2>
				</div>
			</div>
    </section>
    <!-- /FOUNDATION -->

	<section class="container">
		<%= form_for @intervention, url: interventions_intervention_path(@intervention) do |f| %>
			<h4>Select Customer</h4>
			<%= f.select(:customer_id, Customer.all.collect {|c| [c.id.to_s + " - " + c.company_name, c.id] }, { include_blank: true }, { id: :customer_list }) %>

			<div class="hide_select" id="building_show">
				<h4>Select Building ID</h4>
				<%= f.select(:building_id,[], { include_blank: true }, { id: :building_list })%>
			</div>

			<div class="hide_select" id="battery_show">
				<h4>Select Battery ID</h4>
				<%= f.select(:battery_id,[], { include_blank: true }, { id: :battery_list })%>
			</div>

			<div class="hide_select" id="column_show">
				<h4>Select Column ID</h4>
				<%= f.select(:column_id, [], { include_blank: true }, { id: :column_list })%>
			</div>

			<div class="hide_select" id="elevator_show">
				<h4>Select Elevator ID</h4>
				<%= f.select(:elevator_id, [], { include_blank: true }, { id: :elevator_list })%>
			</div>

			<div id="employee_show">
				<h4>Select Employee</h4>
				<%= f.select(:employee_id, Employee.all.collect {|e| [e.id.to_s + ' - ' + e.last_name, e.id]}, { include_blank: true })%>
			</div>

			<div>
				<h4>Description of the intervention</h4>
				<%= f.text_area :report ,{:size => "40x5"} %>
			</div>

			<br>
			<div>
				<%= f.submit "Submit", class: "btn btn-primary", id: "submit_button"%>
			</div>
		<% end %>
	</section>

	<!-- FOUNDATION -->
	<section class="parallax parallax-1" style="background-image: url(<%= image_path "elavator-cityview-crop.jpg"%>)">
